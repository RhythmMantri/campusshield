# Server Configuration
PORT=3000
NODE_ENV=development

# Blockchain Configuration
CONTRACT_ADDRESS=0x...
ETHEREUM_RPC=https://rpc-mumbai.maticvigil.com/
NETWORK_NAME=mumbai
CHAIN_ID=80001

# Private key for blockchain transactions (optional, for admin functions)
PRIVATE_KEY=your_private_key_here

# RPC URLs for different networks
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID

# API Keys
INFURA_PROJECT_ID=your_infura_project_id
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Firebase Configuration (optional)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# n8n Configuration (optional)
N8N_WEBHOOK_URL=https://hello198.app.n8n.cloud/webhook-test/certificate-ocr
N8N_API_KEY=your_n8n_api_key

# OCR Service Configuration
OCR_SERVICE=tesseract # tesseract | google_vision | n8n
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Development
DEBUG=certificate-validator:*
LOG_LEVEL=info

# Gas reporting for testing
REPORT_GAS=false
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key